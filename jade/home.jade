									.filters__row.filters__row--pb15
										.filters__dropbtn
											.subtitle Классификатор продукции
											.filters__plus.js-drop-click(data-id="#filter_4")
											.filters__drop#filter_4
												.filters__drop-container 
													.filters__drop-scrollbar.scrollbar-inner
														.filters__radio2
															input#variant_13(type="radio" name="variant")
															label.filters__radio2-circle(for="variant_13") 
															label.filters__radio2-text(for="variant_13") Вариант 1
														.filters__radio2
															input#variant_14(type="radio" name="variant")

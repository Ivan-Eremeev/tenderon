															label.filters__radio2-text(for="variant_2") Вариант 2
														.filters__radio2
															input#variant_3(type="radio" name="variant")
															label.filters__radio2-circle(for="variant_3") 
															label.filters__radio2-text(for="variant_3") Вариант 3
														.filters__radio2
															input#variant_4(type="radio" name="variant")
															label.filters__radio2-circle(for="variant_4") 
															label.filters__radio2-text(for="variant_4") Вариант 4

									.filters__row.filters__row--pb15
										.filters__dropbtn
											.subtitle Поставщики
											.filters__plus.js-drop-click(data-id="#filter_2")
											.filters__drop#filter_2
												.filters__drop-container 
													.filters__drop-scrollbar.scrollbar-inner
														.filters__radio2
															input#variant_5(type="radio" name="variant")
															label.filters__radio2-circle(for="variant_5") 
															label.filters__radio2-text(for="variant_5") Вариант 1
														.filters__radio2
															input#variant_6(type="radio" name="variant")
															label.filters__radio2-circle(for="variant_6") 
															label.filters__radio2-text(for="variant_6") Вариант 2
														.filters__radio2
															input#variant_7(type="radio" name="variant")
															label.filters__radio2-circle(for="variant_7") 
															label.filters__radio2-text(for="variant_7") Вариант 3
														.filters__radio2
															input#variant_8(type="radio" name="variant")
															label.filters__radio2-circle(for="variant_8") 
															label.filters__radio2-text(for="variant_8") Вариант 4


									.filters__row.filters__row--pb15
										.filters__dropbtn
											.subtitle Место поставки
											.filters__plus.js-drop-click(data-id="#filter_3")
											.filters__drop#filter_3
												.filters__drop-container 

										.filters__switch 
											input#filtersSwitch(type="checkbox", name="")
											label.filters__switch-back(for="filtersSwitch") 
											label.filters__switch-circle(for="filtersSwitch")
											label.filters__switch-text(for="filtersSwitch")  Выбрать все
										.filters__location#filtersLocation
											.filters__radio2
												input#location_1(type="checkbox")
												label.filters__radio2-circle(for="location_1") 
												label.filters__radio2-text(for="location_1") Аукцион
											.filters__radio2
												input#location_2(type="checkbox")
